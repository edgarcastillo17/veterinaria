@model Veterinaria.Web.Models.RegisterViewModel

@{
    ViewBag.Title = "Registro";
}

<h2 class="text-center display-4">Crea una cuenta</h2>
<br />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <section id="loginForm">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4 class="text-center">Ingresa tus datos</h4>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Correo:</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Contraseña:</label>
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Contraseña:</label>
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button class="btn btn-sm btn-primary" href="@Url.Action("Index","Principal")">
                                    <span class="text-white-50"><i class="fas fa-check-circle"></i></span>
                                    <span class="text-white"> Registrarse</span>
                                </button>
                                <a href="@Url.Action("Index","Principal")" class="btn btn-sm btn-dark">
                                    <span class="text-white-50"><i class="far fa-arrow-alt-circle-left"></i></span>
                                    <span class="text-white"> Volver</span>
                                </a>
                            </div>
                        </div>
                    }
                </section>
            </div>
            <div class="card-footer text-center">
                <a href="@Url.Action("Login","Account")" class="text-muted">¿Ya tienes cuenta?</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model Veterinaria.Web.Models.Veterinary

@{
    ViewBag.Title = "Veterinarios";
}

<h2 class="text-center display-4">Eliminar un veterinario</h2>
<br />

<div class="row justify-content-center">
    <div class="card" style="width:25rem; margin:1rem;">
        <div class="card-header text-center bg-danger text-white">¿Seguro que deseas eliminar?</div>
        <div class="card-body">
            <table>
                <tr>
                    <td class="font-weight-bold font-italic">Descripción: </td>
                    <td> @Model.Description</td>
                </tr>
                <tr>
                </tr>
            </table>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="text-center" style="margin:0.5rem;">
                <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" />
                <a href="@Url.Action("Index","Veterinaries")" class="btn btn-sm btn-dark">
                    <span class="text-white-50"><i class="fas fa-arrow-alt-circle-left"></i></span>
                    <span class="text-white"> Regresar</span>
                </a>
            </div>
        }
    </div>
</div>

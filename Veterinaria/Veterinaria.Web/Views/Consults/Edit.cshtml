@model Veterinaria.Web.Models.Consult

@{
    ViewBag.Title = "Consultas";
}

<h2 class="text-center display-4">Editar una consulta</h2>
<br />

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow" style="width:25rem; margin:1rem;">
            <div class="card-header bg-primary text-white text-center">Información</div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.ConsultDate, htmlAttributes: new { @class = "font-weight-bold" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ConsultDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ConsultDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "font-weight-bold" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ConsultType, htmlAttributes: new { @class = "font-weight-bold" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ConsultType, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ConsultType, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-sm btn-primary" />
                                <a href="@Url.Action("Index","Consults")" class="btn btn-sm btn-dark">
                                    <span class="text-white-50"><i class="fas fa-arrow-alt-circle-left"></i></span>
                                    <span class="text-white"> Regresar</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
